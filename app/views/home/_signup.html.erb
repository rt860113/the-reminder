<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign Up</h4>
      </div>
      <div class="modal-body">
        <div class="container">
			<form accept-charset="UTF-8" action="/users" role="form" id="new_user" method="post">
				<div style="display:none" class="form-group">
					<input name="utf8" type="hidden" value="âœ“">
					<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
				</div>
				<div class="form-group">
					<label for="user_first_name">First name:</label><br>
					<input id="user_first_name" class="form-control" name="user[first_name]" type="text" placeholder="First Name" required>
				</div>
				<div class="form-group">
					<label for="user_last_name">Last name:</label><br>
				  	<input id="user_last_name" class="form-control" name="user[last_name]" type="text" placeholder="Last Name" required>
				</div>
				<div class="form-group">
					<label for="user_email">Email:</label><br>
				  	<input id="user_email" name="user[email]" class="form-control" type="email" placeholder="example@example.com" required>
				</div>
				<div class="form-group">
					<label for="user_password">Password:</label><br>
				    <input autocomplete="off" id="user_password" class="form-control" name="user[password]" type="password" placeholder="Password" required>
				</div>
				<div class="form-group">
					<label for="user_password_confirmation">Confirm password:</label><br>
				    <input autocomplete="off" id="user_password_confirmation" class="form-control" name="user[password_confirmation]" type="password" placeholder="Repeat Your Password" required>
				</div>
			 	<div>
					<input class="btn btn-primary" name="commit" type="submit" value="Sign up">
				</div>
			</form>
    	  </div>
  		</div>
      <div class="modal-footer">
        <div><%= link_to "Back to main", root_path %>|<%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
